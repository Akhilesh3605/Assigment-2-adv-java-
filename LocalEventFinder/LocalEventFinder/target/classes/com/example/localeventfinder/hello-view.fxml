<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextArea?>

<?import javafx.scene.Scene?>
<?import javafx.scene.layout.VBox?>


<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.localeventfinder.EventController"
      alignment="CENTER" spacing="20.0" styleClass="root">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <!-- Welcome Text -->
    <Label fx:id="welcomeText" text="Welcome to the Local Event Finder!" styleClass="welcome-label"/>

    <!-- Button to Fetch Events -->
    <Button text="Fetch Events" onAction="#onFetchEventsButtonClick" styleClass="action-button"/>

    <!-- ListView to Display Event Names -->
    <ListView fx:id="eventListView" prefHeight="400.0" prefWidth="300.0" styleClass="list-view"/>

    <!-- TextArea to Display Event Details -->
    <TextArea fx:id="eventDetailsArea" prefHeight="200.0" prefWidth="400.0" promptText="Event Details will be shown here..."
              wrapText="true" styleClass="text-area"/>
</VBox>
